    <script>
        // Sample data for demonstration
        const sampleJobs = [
            {
                id: 1,
                title: "Frontend Developer",
                company: "TechCorp Inc.",
                location: "San Francisco, CA",
                type: "Full-time",
                salary: "$80,000 - $110,000",
                posted: "2 days ago",
                description: "We're looking for a skilled Frontend Developer to join our growing team..."
            },
            {
                id: 2,
                title: "UX/UI Designer",
                company: "DesignHub",
                location: "Remote",
                type: "Remote",
                salary: "$70,000 - $95,000",
                posted: "1 week ago",
                description: "Join our creative team as a UX/UI Designer and help shape amazing user experiences..."
            },
            {
                id: 3,
                title: "Backend Engineer",
                company: "DataDrive",
                location: "New York, NY",
                type: "Full-time",
                salary: "$90,000 - $130,000",
                posted: "3 days ago",
                description: "Looking for a Backend Engineer with experience in Node.js and cloud technologies..."
            }
        ];

        const sampleApplications = [
            {
                id: 1,
                jobTitle: "Frontend Developer",
                company: "TechCorp Inc.",
                status: "Applied",
                date: "2024-01-15",
                statusClass: "bg-blue-100 text-blue-800"
            },
            {
                id: 2,
                jobTitle: "UX/UI Designer",
                company: "DesignHub",
                status: "Interview",
                date: "2024-01-10",
                statusClass: "bg-green-100 text-green-800"
            },
            {
                id: 3,
                jobTitle: "Product Manager",
                company: "InnovateSoft",
                status: "Rejected",
                date: "2024-01-05",
                statusClass: "bg-red-100 text-red-800"
            }
        ];

        // Current user state
        let currentUser = null;

        // Initialize the application
        document.addEventListener('DOMContentLoaded', function() {
            loadFeaturedJobs();
            setupEventListeners();
            checkAuthState();
        });

        function setupEventListeners() {
            // Login form
            document.getElementById('login-form').addEventListener('submit', function(e) {
                e.preventDefault();
                handleLogin();
            });

            // Register form
            document.getElementById('register-form').addEventListener('submit', function(e) {
                e.preventDefault();
                handleRegister();
            });

            // Role selection
            document.getElementById('register-role').addEventListener('change', function() {
                const companyField = document.getElementById('company-field');
                companyField.style.display = this.value === 'recruiter' ? 'block' : 'none';
            });

            // Post job form
            document.getElementById('post-job-form').addEventListener('submit', function(e) {
                e.preventDefault();
                handlePostJob();
            });

            // Profile form
            document.getElementById('profile-form').addEventListener('submit', function(e) {
                e.preventDefault();
                handleProfileUpdate();
            });
        }

        function showView(viewName) {
            // Hide all views
            document.querySelectorAll('.tab-content').forEach(view => {
                view.classList.remove('active');
            });

            // Show the requested view
            document.getElementById(`${viewName}-view`).classList.add('active');

            // Load specific data for certain views
            if (viewName === 'jobs') {
                loadJobs();
            } else if (viewName === 'dashboard' && currentUser) {
                loadDashboard();
            }
        }

        function loadFeaturedJobs() {
            const container = document.getElementById('featured-jobs');
            container.innerHTML = '';

            sampleJobs.forEach(job => {
                const jobCard = `
                    <div class="border rounded-lg p-4 card-hover">
                        <div class="flex justify-between items-start mb-4">
                            <div>
                                <h3 class="font-semibold text-lg">${job.title}</h3>
                                <p class="text-gray-600">${job.company}</p>
                            </div>
                            <img src="https://storage.googleapis.com/workspace-0f70711f-8b4e-4d94-86f1-2a93ccde5887/image/dbc49bd2-efcf-4b00-b309-3715e8f260c4.png" alt="${job.company} company logo with modern design" class="w-12 h-12 object-contain">
                        </div>
                        <div class="space-y-2 mb-4">
                            <div class="flex items-center text-gray-600">
                                <i class="fas fa-map-marker-alt mr-2"></i>
                                <span>${job.location}</span>
                            </div>
                            <div class="flex items-center text-gray-600">
                                <i class="fas fa-dollar-sign mr-2"></i>
                                <span>${job.salary}</span>
                            </div>
                            <div class="flex items-center text-gray-600">
                                <i class="fas fa-briefcase mr-2"></i>
                                <span>${job.type}</span>
                            </div>
                        </div>
                        <button onclick="showView('jobs')" class="w-full bg-indigo-600 text-white py-2 rounded-md hover:bg-indigo-700">
                            View Details
                        </button>
                    </div>
                `;
                container.innerHTML += jobCard;
            });
        }

        function loadJobs() {
            const container = document.getElementById('jobs-list');
            container.innerHTML = '';

            sampleJobs.forEach(job => {
                const jobCard = `
                    <div class="border rounded-lg p-6 card-hover">
                        <div class="flex justify-between items-start mb-4">
                            <div>
                                <h3 class="font-semibold text-xl">${job.title}</h3>
                                <p class="text-gray-600">${job.company} • ${job.location}</p>
                            </div>
                            <img src="https://storage.googleapis.com/workspace-0f70711f-8b4e-4d94-86f1-2a93ccde5887/image/92eaa652-b134-4f42-b490-1bfa08d4e1c6.png" alt="${job.company} modern company logo" class="w-16 h-16 object-contain">
                        </div>
                        <div class="grid md:grid-cols-3 gap-4 mb-4">
                            <div class="flex items-center text-gray-600">
                                <i class="fas fa-dollar-sign mr-2"></i>
                                <span>${job.salary}</span>
                            </div>
                            <div class="flex items-center text-gray-600">
                                <i class="fas fa-briefcase mr-2"></i>
                                <span>${job.type}</span>
                            </div>
                            <div class="flex items-center text-gray-600">
                                <i class="fas fa-clock mr-2"></i>
                                <span>${job.posted}</span>
                            </div>
                        </div>
                        <p class="text-gray-700 mb-4">${job.description}</p>
                        <div class="flex space-x-4">
                            <button class="bg-indigo-600 text-white px-6 py-2 rounded-md hover:bg-indigo-700">
                                Apply Now
                            </button>
                            <button class="border border-indigo-600 text-indigo-600 px-6 py-2 rounded-md hover:bg-indigo-50">
                                Save Job
                            </button>
                        </div>
                    </div>
                `;
                container.innerHTML += jobCard;
            });
        }

        function handleLogin() {
            const email = document.getElementById('login-email').value;
            const password = document.getElementById('login-password').value;

            // Simple validation
            if (!email || !password) {
                alert('Please fill in all fields');
                return;
            }

            // Simulate login (in real app, this would be an API call)
            currentUser = {
                email: email,
                name: email.split('@')[0],
                role: email.includes('recruiter') ? 'recruiter' : 'jobseeker'
            };

            localStorage.setItem('currentUser', JSON.stringify(currentUser));
            updateAuthUI();
            showView('dashboard');
        }

        function handleRegister() {
            const name = document.getElementById('register-name').value;
            const email = document.getElementById('register-email').value;
            const password = document.getElementById('register-password').value;
            const role = document.getElementById('register-role').value;
            const company = document.getElementById('register-company').value;

            // Simple validation
            if (!name || !email || !password) {
                alert('Please fill in all required fields');
                return;
            }

            // Simulate registration (in real app, this would be an API call)
            currentUser = {
                name: name,
                email: email,
                role: role,
                company: role === 'recruiter' ? company : null
            };

            localStorage.setItem('currentUser', JSON.stringify(currentUser));
            updateAuthUI();
            showView('dashboard');
        }

        function handlePostJob() {
            const title = document.getElementById('job-title').value;
            const company = document.getElementById('job-company').value;
            const location = document.getElementById('job-location').value;
            const type = document.getElementById('job-type').value;
            const salary = document.getElementById('job-salary').value;
            const description = document.getElementById('job-description').value;

            if (!title || !company || !location || !description) {
                alert('Please fill in all required fields');
                return;
            }

            alert('Job posted successfully!');
            showView('dashboard');
        }

        function handleProfileUpdate() {
            alert('Profile updated successfully!');
            showView('dashboard');
        }

        function checkAuthState() {
            const savedUser = localStorage.getItem('currentUser');
            if (savedUser) {
                currentUser = JSON.parse(savedUser);
                updateAuthUI();
            }
        }

        function updateAuthUI() {
            const authButtons = document.getElementById('auth-buttons');
            const userMenu = document.getElementById('user-menu');

            if (currentUser) {
                authButtons.style.display = 'none';
                userMenu.style.display = 'flex';
            } else {
                authButtons.style.display = 'flex';
                userMenu.style.display = 'none';
            }
        }

        function logout() {
            currentUser = null;
            localStorage.removeItem('currentUser');
            updateAuthUI();
            showView('home');
        }

        function loadDashboard() {
            if (!currentUser) return;

            const jobseekerDashboard = document.getElementById('jobseeker-dashboard');
            const recruiterDashboard = document.getElementById('recruiter-dashboard');

            if (currentUser.role === 'jobseeker') {
                jobseekerDashboard.style.display = 'block';
                recruiterDashboard.style.display = 'none';
                loadApplications();
            } else {
                jobseekerDashboard.style.display = 'none';
                recruiterDashboard.style.display = 'block';
                loadRecruiterJobs();
            }
        }

        function loadApplications() {
            const container = document.getElementById('applications-list');
            container.innerHTML = '';

            sampleApplications.forEach(app => {
                const appCard = `
                    <div class="border rounded-lg p-4">
                        <div class="flex justify-between items-start mb-3">
                            <div>
                                <h4 class="font-semibold">${app.jobTitle}</h4>
                                <p class="text-gray-600">${app.company}</p>
                            </div>
                            <span class="px-3 py-1 rounded-full text-xs ${app.statusClass}">
                                ${app.status}
                            </span>
                        </div>
                        <div class="flex justify-between items-center">
                            <span class="text-sm text-gray-500">Applied: ${app.date}</span>
                            <button class="text-indigo-600 hover:text-indigo-800 text-sm">
                                View Details
                            </button>
                        </div>
                    </div>
                `;
                container.innerHTML += appCard;
            });
        }

        function loadRecruiterJobs() {
            const container = document.getElementById('recruiter-jobs-list');
            container.innerHTML = '';

            sampleJobs.forEach(job => {
                const jobCard = `
                    <div class="border rounded-lg p-4">
                        <div class="flex justify-between items-start mb-3">
                            <div>
                                <h4 class="font-semibold">${job.title}</h4>
                                <p class="text-gray-600">${job.location} • ${job.type}</p>
                            </div>
                            <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-xs">
                                Active
                            </span>
                        </div>
                        <div class="flex justify-between items-center">
                            <div>
                                <span class="text-sm text-gray-600">${job.salary}</span>
                                <span class="text-sm text-gray-600 mx-2">•</span>
                                <span class="text-sm text-gray-600">12 applicants</span>
                            </div>
                            <div class="space-x-2">
                                <button class="text-indigo-600 hover:text-indigo-800 text-sm">
                                    View Applicants
                                </button>
                                <button class="text-gray-600 hover:text-gray-800 text-sm">
                                    Edit
                                </button>
                            </div>
                        </div>
                    </div>
                `;
                container.innerHTML += jobCard;
            });
        }
    </script>
</body>
